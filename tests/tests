CLEAN=""
TESTS=
  echo 'cd jjjjj'
[302-END]

[303]
NAME="cd -"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'cd /usr'
  echo 'ls -l'
  echo 'cd -'
  echo 'ls -l'
[303-END]

[304]
NAME="cd - without OLDPWD"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'unsetenv OLDPWD'
  echo 'ls -l'
  echo 'cd -'
[304-END]

[305]
NAME="cd home"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'cd'
  echo 'ls -l'
[305-END]

[306]
NAME="cd home without HOME"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'unsetenv HOME'
  echo 'cd'
  echo 'ls-l'
[306-END]

********************************************
       SPACE AND TAB FORMATTING TEST
********************************************

[401]
NAME="space 1"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo -e "ls        -a                 -l             /usr"
[401-END]

[402]
NAME="Only space"
SETUP=""
CLEAN=""
TESTS=
  echo "                                                    "
[402-END]

[403]
NAME="Only tabulation"
SETUP=""
CLEAN=""
TESTS=
  echo "            "
[403-END]

[404]
NAME="Only tabulation and spaces"
SETUP=""
CLEAN=""
TESTS=
  echo "   \t    \t"
[404-END]

[405]
NAME="many tab and space"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo -e "  \t\t    ls\t     \t-l    \t\t  \t -a      /t  /usr   \t\t"
[405-END]

[406]
NAME="Tabulation and spaces and command"
SETUP=""
CLEAN=""
TESTS=
  echo "   \t       ls -l       \t"
[406-END]

