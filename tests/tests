*****************************
       SEPARATOR TEST
*****************************

[601]
NAME="Simple comma separator"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo "ls -l ; echo "caca""
[601-END]

[602]
NAME="Multiple comma separator"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo "ls -l ;;; ; ; ; ;;;;;  ;; ;    ; echo "OUI""
[602-END]

[603]
NAME="Simple pipe"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo "ls -l /etc | grep sh"
[603-END]

[604]
NAME="A pipe with a builtin ?"
SETUP="export VAR1=VALEUR1 ; OLDPATH=$PATH ; PATH='/random'"
CLEAN="PATH=$OLDPATH"
TESTS=
  echo 'setenv | /bin/grep VAR1'
  echo '/bin/ls | cd /usr'
  echo 'ls -l'
  echo 'exit 45|cat /etc/resolv.conf'
[604-END]

[604.5]
NAME="pipe error handling"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo "ls -l /etc |"
[604.5-END]

[604.6]
NAME="pipe error handling 2"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo "| ls"
[604.6-END]

[604.7]
NAME="pipe error handling 3"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo "ls |     | ls"
[604.7-END]

[605]
NAME="A pipe with big input"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'ls /dev | grep tty | sort -r | rev'
[605-END]

[606]
NAME="Advanced pipe"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'env | grep PATH | cat -e | sort -r ; ls -l'
[606-END]

[607]
NAME="Simple right redirection"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'ls -l /dev > toto'
  echo 'cat toto'
  echo 'rm toto'
[607-END]

[608]
NAME="Wrong simple right redirection"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'ls -l /dev >'
[608-END]

[609]
NAME="Simple left redirection"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'ls -l /dev > toto'
  echo 'grep tty < toto'
  echo 'rm toto'
[609-END]

[610]
NAME="Wrong simple left redirection"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'grep tty < ls -l /dev'
[610-END]

[610.1]
NAME="redirect error handling"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'ls >>> d'
[610.1-END]

[610.2]
NAME="redirect error handling2"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'ls >< d'
[610.2-END]

[610.3]
NAME="redirect error handling3"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=$
  echo 'touch z'
  echo 'touch d'
  echo 'ls >z< d'
  echo 'rm z'
  echo 'rm d'
[610.3-END]

[610.4]
NAME="redirect error handling4"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'ls >>s>a'
[610.4-END]

[611]
NAME="Double right redirection"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'ls -l /dev >> toto'
  echo 'ls -l /home >> toto'
  echo 'cat toto'
  echo 'rm toto'
[611-END]

[612]
NAME="Pipe and redirection in file"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'ls -l /dev | grep tty > data'
  echo 'cat data'
  echo 'rm data'
[612-END]

[613]
NAME="Input of file and pipe"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'ls /dev > data'
  echo 'cat < data | grep tty'
  echo 'rm data'
[613-END]

[614]
NAME="Just one pipe"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo '|'
[614-END]

[615]
